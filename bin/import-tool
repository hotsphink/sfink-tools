#!/bin/sh

set -e

SRC_TOOL="$1"
IMPORT_BIN_DIR="$(dirname "$(realpath "$0")")"

IMPORT_DIR="$(dirname "$IMPORT_BIN_DIR")"
base="$(basename "$SRC_TOOL")"
type=bin

if ! [ -x "$SRC_TOOL" ]; then
    SRC_TOOL="$HOME/bin/$base"
    type=bin
fi

if ! [ -x "$SRC_TOOL" ]; then
    SRC_TOOL="$HOME/$base"
    type=conf
fi

if ! [ -f "$SRC_TOOL" ]; then
    echo "$SRC_TOOL not found" >&2
    exit 1
fi

if [ $type = conf ]; then
    DEST="$IMPORT_DIR/$type/${base#.}"
else
    DEST="$IMPORT_DIR/$type/$base"
fi

abs="$(realpath "$DEST")"
rel="$(abs2rel "$abs" "$(dirname "$SRC_TOOL")")"
[ -n "$abs" ] && [ -n "$rel" ]
mv "$SRC_TOOL" "$DEST"
ln -s "$rel" "$SRC_TOOL"

echo "Imported $base into $DEST"
